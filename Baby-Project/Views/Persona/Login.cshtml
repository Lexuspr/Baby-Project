@model Baby_Project.Models.Login
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <body style="background-image: url('https://images.alphacoders.com/212/21253.jpg'"></body>
    <div class="container" style="margin-top:40px;width: 500px; ">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="login-form" align="center" style="background-image: url('https://images3.alphacoders.com/358/35877.png');border-radius:10px ">
            <div class="main-div" >
                <div class="panel panel-primary">
                    <div class="panel-heading">LOGIN</div>
                </div>
                <form id="Login">
                    <div class="form-group">
                        <h3>USER</h3>
                        @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <h3>PASSWORD</h3>
                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                    </div>
                    <div class="forgot">
                        <a href="reset.html">Olvidaste la contraseña?</a>
                    </div><br/>
                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
            </div>
        </div>
    </div>
}

