            @Html.DisplayFor(modelItem => item.Persona_Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Persona_Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Persona_Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Persona_FecNac)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Persona_Sexo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Persona_Celular)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Persona_Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Persona_Tipo_ID)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditPersona", new { id=item.Persona_Id }) |
            @Html.ActionLink("Delete", "DeletePersona", 
                    new { id=item.Persona_Id },
                    new { onclick = "return confirm('¿Estas seguro que quieres borrar este registro?');"
                        })
        </td>
    </tr>
}

</table>

