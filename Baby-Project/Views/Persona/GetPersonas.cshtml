<p>
    @Html.ActionLink("Añadir Persona", "AddPersona")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Persona_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Persona_Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Persona_Apellido)
