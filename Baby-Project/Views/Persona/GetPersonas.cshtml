            @Html.DisplayNameFor(model => model.Persona_Sexo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Persona_Celular)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Persona_Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Persona_Tipo_ID)
        </th>
